<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat" />

    <style name="Text.Tabs">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Tabs.Selected">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.TopicName">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Text.TopicInfo">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.RocketName">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.LaunchInfo">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.RocketStatus">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>